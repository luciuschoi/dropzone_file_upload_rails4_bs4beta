<% @images.each do |image| %>
  <div class="img-thumbnail">
    <%= link_to image_tag(image.avatar.url(:thumb), class:'img-responsive', alt: image.avatar.url(:thumb)), image.avatar.url(:fullscreen), data:{toggle:'lightbox', title: URI.unescape(image.avatar.url(:fullscreen).split('/').last.split('?').first.gsub(/(.*)\..*/,'\1')).titleize, gallery: 'image-thumbs'} %>
  </div>
<% end %>

<div class='paginator'>
  <%= will_paginate @images %>
</div>